<section>
    <h1 class="text-3xl font-bold mb-6">Dashboard</h1>

    <div class="bg-white shadow-md rounded px-8 py-6">
        <h2 class="text-xl font-semibold mb-4">Welcome <%= user.name %>
        </h2>
        <p class="mb-2"><strong>Email:</strong>
            <%= user.email %>
        </p>
        <p class="text-sm text-gray-600">Member since: <%= user.date.toLocaleDateString() %>
        </p>

        <div class="mt-6">
            <a href="/logout" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                Logout
            </a>
        </div>
    </div>
</section>